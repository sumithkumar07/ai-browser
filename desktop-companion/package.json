{
  "name": "aether-desktop-companion",
  "version": "1.0.0",
  "description": "AETHER Desktop Companion - Native Browser Engine with Fellou.ai capabilities",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "build": {
    "appId": "com.aether.desktop-companion",
    "productName": "AETHER Desktop Companion",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "ws": "^8.16.0",
    "axios": "^1.6.2",
    "puppeteer-core": "^21.7.0",
    "playwright": "^1.40.0",

    "screenshot-desktop": "^1.15.0",
    "node-machine-id": "^1.1.12",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "keywords": [
    "aether",
    "browser",
    "ai",
    "automation",
    "desktop",
    "companion",
    "chromium",
    "fellou"
  ],
  "author": "AETHER Team",
  "license": "MIT"
}