{
  "name": "aether-browser",
  "version": "6.0.0",
  "description": "AETHER - AI-First Browser with Native Chromium Engine",
  "main": "electron-main.js",
  "homepage": "./",
  "private": false,
  "scripts": {
    "start": "concurrently \"npm run frontend:start\" \"wait-on http://localhost:3000 && npm run electron:start\"",
    "frontend:start": "cd frontend && npm start",
    "backend:start": "cd backend && python server.py",
    "electron:start": "electron .",
    "electron:dev": "ELECTRON_IS_DEV=1 electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "electron-builder",
    "build": "npm run frontend:build && npm run electron:dist",
    "frontend:build": "cd frontend && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.emergent.aether",
    "productName": "AETHER",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "frontend/build/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "emergent",
      "repo": "aether-browser"
    }
  },
  "dependencies": {
    "electron": "^28.0.0",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.7",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "keywords": [
    "browser",
    "ai",
    "chromium",
    "electron",
    "automation"
  ],
  "author": "Emergent",
  "license": "MIT"
}