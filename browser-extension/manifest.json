{
  "manifest_version": 3,
  "name": "AETHER Browser Extension",
  "version": "1.0.0",
  "description": "AI-powered browser companion with cross-origin automation and Fellou.ai capabilities",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "background",
    "webNavigation",
    "webRequest",
    "clipboardRead",
    "clipboardWrite",
    "notifications",
    "contextMenus",
    "downloads",
    "cookies",
    "history"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content-scripts/dom-analyzer.js",
        "content-scripts/smart-actions.js",
        "content-scripts/automation-engine.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "AETHER Assistant",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "bridge/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src *;"
  }
}